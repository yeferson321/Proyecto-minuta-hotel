@page
@model Minuta.App.EditarModel
@{
}
<h1>Editar Informacion de: @Model.DatosUserDetalle.Nombre</h1>
<form method="post">
    <input type="hidden" asp-for="DatosUserDetalle.Id">
    <div class="form-group">
        <label asp-for="DatosUserDetalle.Nombre"></label>
        <input asp-for="DatosUserDetalle.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="DatosUserDetalle.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="DatosUserDetalle.Edad"></label>
        <input asp-for="DatosUserDetalle.Edad" class="form-control">
        <span class="text-danger" asp-validation-for="DatosUserDetalle.Edad"></span>
    </div>
    <button type="submit" class="btn btn-outline-success table-btn">
        <i class="bi bi-person-plus-fill"></i>
        Grabar Datos
    </button>
</form>
<a asp-page="./Login" class="btn btn-primary table-btn">
    Menu Principal
</a>
